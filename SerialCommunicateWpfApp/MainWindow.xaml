<Window x:Class="SerialCommunicateWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialCommunicateWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="600">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="214*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="PortNameBox" HorizontalAlignment="Left" Margin="20,41,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="BaundRateBox" HorizontalAlignment="Left" Margin="167,41,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.742,0.545">
            <ComboBoxItem Content="9600"/>
            <ComboBoxItem Content="115200"/>
        </ComboBox>
        <Label Content="Port Name" HorizontalAlignment="Left" Margin="20,15,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.78,0.577"/>
        <Label Content="Baund Rate" HorizontalAlignment="Left" Margin="167,15,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="OpenPortBtn" Content="Open Port" HorizontalAlignment="Left" Margin="309,41,0,0" VerticalAlignment="Top" Width="75" Height="34" Click="OpenPortBtn_Click"/>
        <Button x:Name="ClosePortBtn" Content="Close Port" HorizontalAlignment="Left" Margin="400,41,0,0" VerticalAlignment="Top" Width="75" Height="34" Click="ClosePortBtn_Click" RenderTransformOrigin="0.907,-6.926"/>
        <Button x:Name="ExportBtn" Content="Export" HorizontalAlignment="Left" Margin="488,41,0,0" VerticalAlignment="Top" Width="75" Click="ExportBtn_Click" RenderTransformOrigin="0.882,-0.532" Height="34"/>
        <GroupBox x:Name="GroupArea0" Header="Area0" HorizontalAlignment="Left" Height="86" Margin="59,88,0,0" VerticalAlignment="Top" Width="474">
            <Canvas HorizontalAlignment="Left" Margin="10,0,0,3" Width="450">
                <Label Content="測定時刻" Canvas.Left="39" RenderTransformOrigin="0.546,-0.385"/>
                <Label Content="温度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="160"/>
                <Label Content="湿度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="224" RenderTransformOrigin="0.845,0.385"/>
                <Label Content="照度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="293" RenderTransformOrigin="1.989,0.711"/>
                <Label Content="溶接機の電源" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="358"/>
                <TextBox x:Name="DateTimeBox0" Height="20" Canvas.Left="10" TextWrapping="Wrap" Text="2018/10/16 23:45:32" Canvas.Top="31" Width="120"/>
                <TextBox x:Name="TempBox0" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="26℃" VerticalAlignment="Top" Width="35" Canvas.Left="160" Canvas.Top="31" />
                <TextBox x:Name="HumidityBox0" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="60%" VerticalAlignment="Top" Width="35" Canvas.Left="224" Canvas.Top="31" />
                <TextBox x:Name="IlluminationBox0" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="250lux" VerticalAlignment="Top" Width="52" Canvas.Left="285" Canvas.Top="31" RenderTransformOrigin="1.109,0.742"/>
                <ProgressBar x:Name="Power0" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="56" Canvas.Left="370" Canvas.Top="31"/>
            </Canvas>
        </GroupBox>
        <GroupBox x:Name="GroupArea1" Header="Area1" HorizontalAlignment="Left" Height="86" Margin="59,179,0,0" VerticalAlignment="Top" Width="474">
            <Canvas HorizontalAlignment="Left" Margin="10,0,0,3" Width="450">
                <Label Content="測定時刻" Canvas.Left="39" RenderTransformOrigin="0.546,-0.385"/>
                <Label Content="温度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="160"/>
                <Label Content="湿度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="224" RenderTransformOrigin="0.845,0.385"/>
                <Label Content="照度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="293" RenderTransformOrigin="1.989,0.711"/>
                <Label Content="溶接機の電源" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="358"/>
                <TextBox x:Name="DateTimeBox1" Height="20" Canvas.Left="10" TextWrapping="Wrap" Text="2018/10/16 23:45:32" Canvas.Top="31" Width="120"/>
                <TextBox x:Name="TempBox1" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="26℃" VerticalAlignment="Top" Width="35" Canvas.Left="160" Canvas.Top="31" />
                <TextBox x:Name="HumidityBox1" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="60%" VerticalAlignment="Top" Width="35" Canvas.Left="224" Canvas.Top="31" />
                <TextBox x:Name="IlluminationBox1" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="250lux" VerticalAlignment="Top" Width="52" Canvas.Left="285" Canvas.Top="31" RenderTransformOrigin="1.109,0.742"/>
                <ProgressBar x:Name="Power1" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="56" Canvas.Left="370" Canvas.Top="31"/>
            </Canvas>
        </GroupBox>
        <GroupBox x:Name="GroupArea2" Header="Area2" HorizontalAlignment="Left" Height="86" Margin="59,270,0,0" VerticalAlignment="Top" Width="474">
            <Canvas HorizontalAlignment="Left" Margin="10,0,0,3" Width="450">
                <Label Content="測定時刻" Canvas.Left="39" RenderTransformOrigin="0.546,-0.385"/>
                <Label Content="温度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="160"/>
                <Label Content="湿度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="224" RenderTransformOrigin="0.845,0.385"/>
                <Label Content="照度" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="293" RenderTransformOrigin="1.989,0.711"/>
                <Label Content="溶接機の電源" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="358"/>
                <TextBox x:Name="DateTimeBox2" Height="20" Canvas.Left="10" TextWrapping="Wrap" Text="2018/10/16 23:45:32" Canvas.Top="31" Width="120"/>
                <TextBox x:Name="TempBox2" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="26℃" VerticalAlignment="Top" Width="35" Canvas.Left="160" Canvas.Top="31" />
                <TextBox x:Name="HumidityBox2" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="60%" VerticalAlignment="Top" Width="35" Canvas.Left="224" Canvas.Top="31" />
                <TextBox x:Name="IlluminationBox2" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="250lux" VerticalAlignment="Top" Width="52" Canvas.Left="285" Canvas.Top="31" RenderTransformOrigin="1.109,0.742"/>
                <ProgressBar x:Name="Power2" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="56" Canvas.Left="370" Canvas.Top="31"/>
            </Canvas>
        </GroupBox>

    </Grid>
</Window>
