<Window x:Class="SerialCommunicateWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialCommunicateWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="214*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="PortNameBox" HorizontalAlignment="Left" Margin="20,41,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="BaundRateBox" HorizontalAlignment="Left" Margin="167,41,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.742,0.545">
            <ComboBoxItem Content="9600"/>
            <ComboBoxItem Content="115200"/>
        </ComboBox>
        <ProgressBar x:Name="ProgressStatus" HorizontalAlignment="Left" Height="22" Margin="320,41,0,0" VerticalAlignment="Top" Width="95"/>
        <GroupBox Header=" Recieve Data" HorizontalAlignment="Left" Height="213" Margin="20,87,0,0" VerticalAlignment="Top" Width="277">
            <ListBox x:Name="ReadLineList" HorizontalAlignment="Left" Height="171" Margin="10,10,0,0" VerticalAlignment="Top" Width="244"/>
        </GroupBox>
        <Label Content="Port Name" HorizontalAlignment="Left" Margin="20,15,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.78,0.577"/>
        <Label Content="Baund Rate" HorizontalAlignment="Left" Margin="167,15,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Progress" HorizontalAlignment="Left" Margin="320,15,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="OpenPortBtn" Content="Open Port" HorizontalAlignment="Left" Margin="320,121,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="OpenPortBtn_Click"/>
        <Button x:Name="ClosePortBtn" Content="Close Port" HorizontalAlignment="Left" Margin="320,214,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="ClosePortBtn_Click"/>
    </Grid>
</Window>
